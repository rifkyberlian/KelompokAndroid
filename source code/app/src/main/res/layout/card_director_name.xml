<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/card_view_home"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:layout_marginBottom="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp">
        <ImageView
            android:id="@+id/icon"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_outline_play_circle_filled_24px"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/name"
            android:layout_toLeftOf="@+id/runtime"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_toRightOf="@+id/icon"
            android:padding="7dp"
            android:textColor="@color/grey_60"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.Medium.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/icon"
            android:paddingStart="10dp"
            android:layout_toStartOf="@+id/runtime" />
        <TextView
            android:id="@+id/runtime"
            android:layout_alignParentRight="true"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>